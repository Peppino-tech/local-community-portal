    <!-- Mobile menu toggle (hidden on desktop via CSS) -->
    <button class="nav-toggle" aria-label="Toggle menu" aria-expanded="false" aria-controls="main-nav">☰</button>

    <!-- Main navigation -->
    <nav id="main-nav" class="nav-links" role="navigation" aria-label="Main">
      <a href="/"                class="<%= active === 'home'       ? 'active' : '' %>">Home</a>
