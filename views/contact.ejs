<%- include('partials/header', { title: 'Contact â€¢ Local Community Portal', active: 'contact' }) %>

<div class="page-content container">
  <h1>Contact Us</h1>

  <div class="card">
    <% if (locals.sent) { %>
      <!-- Non-JS fallback success (POST /contact) -->
      <p class="success-message" aria-live="polite">âœ… Thanks! Your message has been received.</p>
      <p><a href="/contact">Send another message</a></p>
    <% } else { %>
      <!-- With JS enabled, this form submits via AJAX to /api/contact -->
      <form id="contact-form" method="POST" action="/contact" novalidate>
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" required>
        </div>

        <div class="form-group">
          <label for="subject">Subject</label>
          <input type="text" id="subject" name="subject" required>
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required>
        </div>

        <div class="form-group">
          <label for="message">Message</label>
          <textarea id="message" name="message" rows="5" required></textarea>
        </div>

        <div id="form-error" class="error-message" aria-live="polite"></div>
        <button type="submit">Send Message</button>
      </form>
    <% } %>
  </div>
</div>

<%- include('partials/footer') %>
