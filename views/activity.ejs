<%- include('partials/header', { title: 'Activity â€¢ Local Community Portal', active: 'activity' }) %>

<section class="container page-content">
  <h1 id="quiz-title">Sports Date Quiz</h1>
  <p id="quiz-desc" class="subtitle">
    Pick the correct date for each sports-related event. No page reloads; fully keyboard friendly.
  </p>

  <!-- Live quiz region -->
  <div
    id="quiz"
    class="card"
    role="region"
    aria-labelledby="quiz-title"
    aria-describedby="quiz-desc"
    aria-live="polite"
  ></div>

  <!-- Stats / controls -->
  <div class="card quiz-stats">
    <p><strong>Score:</strong> <span id="score">0</span></p>
    <p><strong>Best:</strong> <span id="best">0</span></p>
    <button id="restart" type="button" aria-controls="quiz" aria-label="Restart the quiz">Restart</button>
  </div>
</section>

<script src="/js/activity.js" defer></script>
<%- include('partials/footer') %>
