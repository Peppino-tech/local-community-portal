<%- include('partials/header', { title: 'Events', active: 'events' }) %>

<section class="container">
  <h1>Events</h1>

  <div class="card" style="margin:18px 0;">
    <form id="eventsFilters" class="filters" onsubmit="return false">
      <label>Year
        <select id="ev-year" name="year">
          <option value="">All</option>
          <% years.forEach(y => { %>
            <option value="<%= y %>" <%= y === currentYear ? 'selected' : '' %>><%= y %></option>
          <% }) %>
        </select>
      </label>

      <label>Area
        <select id="ev-area" name="area_id">
          <option value="">All</option>
          <% areas.forEach(a => { %>
            <option value="<%= a.id %>"><%= a.name %></option>
          <% }) %>
        </select>
      </label>

      <label>Type
        <select id="ev-type" name="type_id">
          <option value="">All</option>
          <% types.forEach(t => { %>
            <option value="<%= t.id %>"><%= t.name %></option>
          <% }) %>
        </select>
      </label>

      <label style="flex:1 1 220px;">Search
        <input id="ev-q" type="text" placeholder="Search eventsâ€¦">
      </label>

      <label>Show
        <select id="ev-past" name="past" title="Past/Upcoming">
          <option value="false" selected>Upcoming</option>
          <option value="true">Past</option>
          <option value="">All</option>
        </select>
      </label>
    </form>
  </div>

  <div id="ev-summary" style="margin:8px 0 12px; color:var(--muted)"></div>

  <div id="eventsList" class="card-grid" aria-live="polite"></div>

  <div style="display:flex; gap:14px; margin-top:18px;">
    <button id="ev-prev" class="btn btn-outline" type="button">Previous</button>
    <button id="ev-next" class="btn" type="button">Next</button>
  </div>
</section>

<script src="/js/events.js"></script>
<%- include('partials/footer') %>
