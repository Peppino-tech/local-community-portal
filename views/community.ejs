<%- include('partials/header', { title: area.name + ' — Community Area', active }) %>

<section class="container page-content">
  <h1><%= area.name %> — Activities & Events</h1>

  <% if (listings && listings.length) { %>
    <div class="card-grid">
      <% listings.forEach(ev => { %>
        <a class="card" href="/events/<%= ev.id %>">
          <h3><%= ev.title %></h3>
          <p class="meta"><%= ev.date %></p>
          <% if (ev.summary) { %>
            <p><%= ev.summary %></p>
          <% } %>
        </a>
      <% }) %>
    </div>
  <% } else { %>
    <p>No activities or events are currently listed for this area.</p>
  <% } %>
</section>

<%- include('partials/footer') %>
