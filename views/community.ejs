<%- include('partials/header', { title: areaName + ' — Community Area', active }) %>

<section class="container">
  <h1><%= areaName %> — Activities & Events</h1>

  <form id="areaFilters" class="filters" aria-label="Area filters">
    <label>
      Year
      <select id="af-year" name="year">
        <option value="">All</option>
        <% const thisYear = new Date().getFullYear(); for (let y = thisYear + 1; y >= thisYear - 4; y--) { %>
          <option value="<%= y %>"><%= y %></option>
        <% } %>
      </select>
    </label>

    <label>
      Show
      <select id="af-past" name="past">
        <option value="">All</option>
        <option value="false" selected>Upcoming</option>
        <option value="true">Past</option>
      </select>
    </label>
  </form>

  <div id="area-results" class="card-grid" aria-live="polite" aria-busy="true">
    <p>Loading <%= areaName %> events…</p>
  </div>
</section>

<script>
  window.__AREA_NAME__ = "<%= areaName %>";
</script>
<script src="/js/area.js" defer></script>

<%- include('partials/footer') %>
